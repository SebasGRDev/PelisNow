<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    android:padding="16dp"
    tools:context=".topMovies.view.MovieDetailFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_image_container"
        android:layout_width="160dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_detail_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,3:4"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txt_detail_title_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textColor="@color/white"
        android:textSize="28sp"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintStart_toEndOf="@id/card_image_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/card_image_container"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title_movie"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_1"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title_movie"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_2"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title_movie"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_3"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title_movie"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_4"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title_movie"/>

    <TextView
        android:id="@+id/txt_detail_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title_movie"
        android:text="0.0"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/txt_detail_title"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:text="Details:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_image_container" />

    <TextView
        android:id="@+id/txt_detail_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title"
        app:layout_constraintStart_toStartOf="@id/txt_detail_title"
        app:layout_constraintEnd_toEndOf="@id/txt_detail_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="fdas a as fdsaf sa fsda fsad fas fsdadsaf dasfadsfjkdals dsa dsa fsa fasd asfsa fsd s s fdsaj sdf af ajfdkafjk  djklaf dkal dfjkla fdjkañf alñsasf ds fda d s ff s fdsf adsf djdkdf ffekdiekjgue ksalfkjd dkfjjfei f e"
        android:textColor="@color/white"
        android:textSize="18sp"
        style="@style/TextAppearance.MaterialComponents.Body2"/>

</androidx.constraintlayout.widget.ConstraintLayout>