<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    android:padding="16dp"
    tools:context=".topMovies.view.MovieDetailFragment">

    <ImageView
        android:id="@+id/iv_detail_poster"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textColor="@color/white"
        android:textSize="28sp"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_detail_poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/iv_detail_poster"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_1"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_2"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_3"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title"/>

    <ImageView
        android:id="@+id/txt_detail_rating_star_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_4"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title"/>

    <TextView
        android:id="@+id/txt_detail_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/txt_detail_rating_star_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_detail_title"
        android:text="0.0"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/txt_detail"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:text="Detalles:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_poster" />

    <TextView
        android:id="@+id/txt_detail_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/txt_detail"
        app:layout_constraintStart_toStartOf="@id/txt_detail"
        app:layout_constraintEnd_toEndOf="@id/txt_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="fdas a as fdsaf sa fsda fsad fas fsdadsaf dasfadsfjkdals dsa dsa fsa fasd asfsa fsd s s fdsaj sdf af ajfdkafjk  djklaf dkal dfjkla fdjkañf alñsasf ds fda d s ff s fdsf adsf djdkdf ffekdiekjgue ksalfkjd dkfjjfei f e"
        android:textColor="@color/white"
        android:textSize="18sp"
        style="@style/TextAppearance.MaterialComponents.Body2"/>

</androidx.constraintlayout.widget.ConstraintLayout>